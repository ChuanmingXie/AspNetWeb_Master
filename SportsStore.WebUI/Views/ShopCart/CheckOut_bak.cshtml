        @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Line1, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Community, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Community, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Community, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BuldingRoom, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.BuldingRoom, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BuldingRoom, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.City, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Province, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Province, new { @class = "form-control" })
