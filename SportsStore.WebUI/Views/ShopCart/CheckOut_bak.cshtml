    <div class="form-group">
        @Html.LabelFor(x => x.Zip, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Zip, "", new { @class = "text-danger" })
    </div>
    <h3>选项</h3>
    <div class="checkbox">
        <label>@Html.EditorFor(x => x.GiftWrap)</label>
        礼盒包装
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="完成提交" />
    </div>
}

