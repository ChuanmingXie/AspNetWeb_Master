@model SportsStore.Shared.Entities.ShoppingDetails

@{
    ViewBag.Title = "商品结算";
}

<h2>结算信息</h2>
<p>请输入您的个人信息,火速安排发货！</p>
@using (@Html.BeginForm())
{
